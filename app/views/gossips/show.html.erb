<% gossip = Gossip.find(params[:id].to_s) %>
<!-- GOSSIP  -->
<section class="bg-light py-3 py-md-5 py-xl-8">
  <%# TITRE %>
  <div class="container">
    <div class="container row justify-content-md-center"> 
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="mb-4 display-5 text-center"><%=  gossip.title %></h1>
        <p class="text-secondary mb-5 text-center lead fs-4"><strong>Auteur :</strong> <%=  gossip.author.first_name %></p>
      </div>
    </div>
  </div>

  <%# content %>
  <div class="container overflow-hidden">
    <div class="row justify-content-md-center">
    <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden">
          <div class="card-body p-5">
      <p class="">Potin nÂ°<%= gossip.id %></p>
      <div class="">
        <p><%=  gossip.content %></p>
      </div>
      <p class=""><a href="<%= gossips_edit_path %>/<%=  gossip.id %>">Modifier</a> - <a href="<%= root_path %>">Retour</a></p>
     </div>
      </div>
    </div>
  </div>

</section>
<%# COMMENTS %>
<% comments = Comment.where(commented_gossip_id: gossip.id) %>

<section class='w3-light-grey' style="padding: 30px">
      <h3>Ajouter un commentaire</h3>
     
    <hr>
    <%# TOUS LES COMMENTAIRES %>
    <section>
      <h3>Tous les commentaires</h3>
      <% comments.each do |comment| %>
        <p><strong><%= comment.commenting_user.first_name %></strong> : <br>
          <%= comment.content %>
          <br>
          Likes : <%= Like.where(comment_id: comment.id).length%>
        </p>
      <% end %>
    </section>
</section>