
<!-- GOSSIP  -->
<section class="bg-light py-3 py-md-5 py-xl-8">
  <%# TITRE %>
  <div class="container">
    <div class="container row justify-content-md-center"> 
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="mb-4 display-5 text-center"><%=  @gossip.title %></h1>
        <p class="text-secondary text-center lead fs-4"><strong>Auteur :</strong> <%= link_to "#{@gossip.author.first_name}", user_path(@gossip.author) %></p>
        <p class="text-center  mb-5 ">Potin n°<%= @gossip.author.city.name %></p>
      </div>
    </div>
  </div>

  <%# content %>
  <div class="container overflow-hidden  mb-5 ">
    <div class="row justify-content-md-center">
    <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden">
          <div class="card-body p-5">
      <p class="">Potin n°<%= @gossip.id %></p>
      <div class="">
        <p><%=  @gossip.content %></p>
      </div>
      <!--LIENS -->
       <!--LIENS -->
        <div class="text-right">
         <a
          name=""
          id=""
          class="btn btn-primary"
          href="<%= edit_gossip_path(@gossip) %>"
          role="button"
          >Voir plus</a
         >

         <a
          name=""
          id=""
          class="btn btn-secondary"
          href="<%= root_path %>"
          role="button"
          >Retour</a>
          </div>
     </div>
      </div>
    </div>
  </div>

</section>
<%# COMMENTS %>

<section class='w3-light-grey' style="padding: 30px">
      <h3>Ajouter un commentaire</h3>
     
    <hr>
    <%# TOUS LES COMMENTAIRES %>
    <% if @comments.length> 0 %>
    <section>
      <h3>Tous les commentaires</h3>
      <% @comments.each do |comment| %>
        <p><strong><%= comment.commenting_user.first_name %></strong> : <br>
          <%= comment.content %>
          <br>
          Likes : <%= Like.where(comment_id: comment.id).length%>
        </p>
      <% end %>
    </section>
    <% end %>
</section>