<!-- - Bootstrap Brain Component -->
<section class="bg-light py-3 py-md-5 py-xl-8">
  <%# TITRE %>
  <div class="container">
    <div class="container row justify-content-md-center"> 
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="mb-4 display-5 text-center">The Gossip Project</h1>
        <p class="text-secondary mb-5 text-center lead fs-4">Tous les potins les plus croustillants sont ici</p>
      </div>
    </div>
  </div>

  <%# content %>
  <div class="container overflow-hidden">
  <div class="row justify-content-md-center">
  <% Gossip.all.each do |gossip| %>
    <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden my-4">
      <div class="card-body p-3">
        <h3><%= gossip.title %></h3>
        <p><strong>Auteur : <%= gossip.author.first_name %></strong></p>
        
        <p><%= gossip.content %></p>
        <p>Potin nÂ°<%= (gossip.id).to_s.rjust(2, '0')%> - Commentaires : <%= Comment.where(commented_gossip_id: gossip.id).length %> - Likes : <%= Like.where(gossip_id: gossip.id).length %></p>
        <p class="w3-center"><a href="/gossips/show/<%= gossip.id %>">Lire</a> - <a href="/gossips/edit/<%= gossip.id %>">Modifier</a></p>
      </div>
    </div>
  <% end %>
</section>