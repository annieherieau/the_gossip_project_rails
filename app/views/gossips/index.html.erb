<!-- - Bootstrap Brain Component -->
<section class="bg-light py-3 py-md-5 py-xl-8">
  <%# TITRE %>
  <div class="container">
    <div class="container row justify-content-md-center"> 
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="mb-4 display-5 text-center">The Gossip Project</h1>
        <p class="text-secondary mb-5 text-center lead fs-4">Tous les potins les plus croustillants sont ici</p>
      </div>
    </div>
  </div>

  <%# content %>
  <% if logged_in? %>
    <p class="text-center"> Bonjour :  <%= current_user.first_name %> [<%= current_user.id %>]  </p>
  <%end%>
  <div class="container overflow-hidden">
    <div class="row justify-content-md-center">
      <% @gossips_all.each do |gossip| %>
        <% author = gossip.author %>
        <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden my-4" id="<%= gossip.id %>">

          <%# GOSSIP %>
          <div class="card-body p-3">
            <h3><%= gossip.title %></h3>
            <div>
              <p><strong>Auteur : <%= link_to "#{author.first_name}", user_path(author) %></strong>
              <br>
              Ville : <%= link_to "#{author.city.name}", city_path(author.city) %> </p>
             </div>
            <p><%= gossip.content %></p>
            <small>Potin nÂ°<%= gossip.id %> - Commentaires : <%= Comment.where(commented_gossip_id: gossip.id).length %> - Likes : <%= Like.where(gossip_id: gossip.id).length %></small>
            
            <% if logged_in? %>
            <!--LIENS -->
            <div class="text-right">
              <%# MODIFIER %>
              <% if gossip.author ==  current_user %>
                <a class="btn btn-secondary ml-2"
                  href="<%= edit_gossip_path(gossip) %>"
                  role="button"
                  >Mofifier</a>
                  
              <% else %>
                <%# LIKE %>
                <% @already_liked = Like.where(user_id: current_user.id, gossip_id: gossip.id).length %>
                <% @already_liked.zero? ? button_class ="btn btn-outline-success" : button_class ="btn btn-success" %>
                <% @already_liked.zero? ? like_txt ="Like" : like_txt ="Unlike"  %>
                <%= form_with url: likes_path(gossip_id: gossip.id, user_id: current_user.id), action: 'create', method: "post", class:"d-inline ml-2" do |f| %>
                  <%= f.submit value: like_txt, class: button_class %>
                <% end %>
              <% end %>

              <%# LIRE %>
              <a class="btn btn-primary ml-2" href="<%= gossip_path(gossip) %>" 
              role="button"
                >Lire</a>
              </div>
            <% end %>
          </div>
          
        </div>
      <% end %>
    </div>
  </div>
</section>