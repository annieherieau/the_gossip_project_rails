
<!-- - Bootstrap Brain Component -->
<section class="bg-light py-3 py-md-5 py-xl-8">
  <%# TITRE %>
  <div class="container">
    <div class="container row justify-content-md-center"> 
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="mb-4 display-5 text-center"><%= @user.first_name %> <%= @user.last_name %></h1>
        <p class="text-secondary mb-5 text-center lead fs-4"> </p>
      </div>
    </div>
  </div>

  <%# PROFIL %>
  <div class="container overflow-hidden">
    <div class="row justify-content-md-center">
      <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden">
            <div class="card-body p-5">

              <!-- @User Data -->
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Identifiant : </strong><%= @user.id %></li>
                <li class="list-group-item"><strong>Prénom : </strong><%= @user.first_name %></li>
                <li class="list-group-item"><strong>Nom : </strong><%= @user.last_name %></li>
                <li class="list-group-item"><strong>Âge : </strong><%= @user.age %> ans</li>
                <li class="list-group-item"><strong>Email : </strong><%= @user.email %></li>
                <li class="list-group-item"><strong>Ville : </strong><%= @city.zip_code %> <%= @city.name %></li>
                <li class="list-group-item"><strong>Description : </strong><%= @user.description %></li>
                <li class="list-group-item"><strong>Nombre de Potins : </strong><%= @gossips.length %> </li>
                <li class="list-group-item"><strong>Nombre de Commentaires : </strong><%= @comments.length %> </li>
                <li class="list-group-item"><strong>Nombre de Likes : </strong><%= @likes.length %> </li>
            </div>
        </div>
      <div class="text-right my-3">
          <a class="btn btn-secondary ml-2" href="<%= root_path %>" role="button">< Retour</a>
        </div>
    </div>
    <%# Liste des potins %>

        <% @gossips.sort_by{|g| -g.id}.each do |gossip|%>
      <div class="card border-0 border-bottom border-primary shadow-sm overflow-hidden my-4" >
        <div class="card-body p-3">
          <h3><%= gossip.title %></h3>
          <p><%= gossip.content %></p>
          <small>Potin n°<%= gossip.id %> - 
            Commentaires : <%= find_gossip_comments(gossip.id).length %> 
            - Likes : <%= find_gossip_likes(gossip.id).length %></small>
        </div>
      </div>
        <% end %>
      </div>


</section>



